<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--
    	Header theme.
		@author Yueling Loh 
    -->
    <style name="HeaderTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <!-- <item name="android:layout_alignParentStart">true</item> -->
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/header_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/header_vertical_margin</item>
    </style>

    <!--
	    Header Text theme.
	    @author Yueling Loh 
    -->
    <style name="HeaderTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:drawableLeft">@drawable/ic_logo</item>
        <item name="android:drawablePadding">@dimen/logo_padding</item>
    </style>

    <!--
	    Main area theme. 
	    @author Yueling Loh 
    -->
    <style name="MainLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!--
    	Button Bar theme.
		@author Yueling Loh 
    -->
    <style name="ButtonBarTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/header_vertical_margin</item>
        <item name="android:paddingTop">@dimen/header_vertical_margin</item>
    </style>

    <!--
	    Dark Theme 
	    @author tejasvamsingh 
    -->

    <style name="DarkTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/layout_background_tejas</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!--
    	Button Bar Button Layout.
		@author Yueling Loh 
    -->
    <style name="BarButton">
        <item name="android:layout_width">@dimen/button_standard_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--
    	Standard Button Layout.
		@author Yueling Loh 
    -->
    <style name="StandardButton">
        <item name="android:layout_width">@dimen/button_standard_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--
    	Standard Button Layout.
		@author Yueling Loh 
    -->
    <style name="BigEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--  <item name="android:layout_height">@dimen/edittext_height</item>-->
        <item name="android:background">@drawable/edittext_background_light</item>
        <item name="android:gravity">center</item>
    </style>

</resources>