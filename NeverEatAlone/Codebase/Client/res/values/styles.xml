<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--
    	Header theme.
		@author Yueling Loh 
    -->
    <style name="HeaderTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <!-- <item name="android:layout_alignParentStart">true</item> -->
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!--
	    Header Text theme.
	    @author Yueling Loh 
    -->
    <style name="HeaderTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/header_text_size</item>
       <!--  <item name="android:drawableLeft">@drawable/ic_logo</item>
        <item name="android:drawablePadding">@dimen/logo_padding</item> -->
    </style>

    <!--
	    Main area theme. 
	    @author Yueling Loh 
    -->
    <style name="MainLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!--
    	Button Bar theme.
		@author Yueling Loh 
    -->
    <style name="ButtonBarTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/header_vertical_margin</item>
        <item name="android:paddingTop">@dimen/header_vertical_margin</item>
    </style>

    <!--
	    Dark Theme 
	    @author tejasvamsingh 
    -->

    <style name="DarkTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/layout_background_tejas</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!--
    	Button Bar Button Layout.
		@author Yueling Loh 
    -->
    <style name="BarButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!--
    	Standard Button Layout.
		@author Yueling Loh 
    -->
    <style name="StandardButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!--
    	Big Edit Text Layout.
		@author Yueling Loh 
    -->
    <style name="BigEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/edittext_padding</item>
        <item name="android:paddingTop">@dimen/edittext_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/edittext_background_light</item>
        <item name="android:gravity">center</item>
    </style>

    
	<!--
    	Regular Edit Text Layout.
		@author Yueling Loh 
    -->
    <style name="RegularEditText">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/edittext_padding</item>
        <item name="android:paddingTop">@dimen/edittext_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!--  Spinner sytles 
    @author tejasvamsingh -->
        
        
     <style name="customtheme" parent="@android:style/Theme.NoTitleBar">
     <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
     <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>
     <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>        
    </style>
    <style name="SpinnerDropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
         <item name="android:background">@drawable/spinner_dropdown_drawable</item>
        <item name="android:textColor">#FFFFFF</item>        
    </style>
    

</resources>