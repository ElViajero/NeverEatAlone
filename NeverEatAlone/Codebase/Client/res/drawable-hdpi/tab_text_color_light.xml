<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="#b2b2b2"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="#000e14"/>

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="#b2b2b2"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="#000e14"/>

    <!-- STATES WHEN BUTTON IS PRESSED -->


    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="false" android:color="#b2b2b2"/>
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="true" android:color="#000e14"/>

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:state_focused="true" android:state_pressed="true" android:state_selected="false" android:color="#b2b2b2"/>
    <item android:state_focused="true" android:state_pressed="true" android:state_selected="true" android:color="#000e14"/>

</selector>