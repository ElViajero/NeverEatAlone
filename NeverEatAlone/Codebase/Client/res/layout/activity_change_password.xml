<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/layout_background"
    tools:context="edu.jhu.cs.oose.fall2014.group19.neverEatAlone.client.gui.activities.ChangePasswordActivity" >

    <TextView
        android:id="@+id/textView_changepassword_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/change_password"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_changepassword_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_changepassword_oldpassword"
        android:layout_below="@+id/textView_changepassword_oldpassword"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:background="@drawable/edittext"
        android:hint="Original password for ID: xxxxxx"
        android:inputType="textPassword" >

        <requestFocus android:layout_width="match_parent" />

    </EditText>

    <Button
        android:id="@+id/button_changepassword_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="OnConfirmButtonClick"
        android:background="@drawable/buttonbackground"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/confirm" />

    <Button
        android:id="@+id/button_changepassword_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="OnCancelButtonClick"
        android:background="@drawable/buttonbackground"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/textView_changepassword_newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_changepassword_oldpassword"
        android:layout_below="@+id/editText_changepassword_oldpassword"
        android:layout_marginTop="25dp"
        android:text="@string/new_password"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editText_changepassword_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_changepassword_newpassword"
        android:layout_below="@+id/textView_changepassword_newpassword"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:background="@drawable/edittext"
        android:hint="Some password standards here."
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView_changepassword_confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_changepassword_newpassword"
        android:layout_below="@+id/editText_changepassword_newpassword"
        android:layout_marginTop="36dp"
        android:text="@string/confirm_password"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editText_changepassword_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_changepassword_confirmpassword"
        android:layout_below="@+id/textView_changepassword_confirmpassword"
        android:ems="10"
        android:background="@drawable/edittext"
        android:hint="Retype your new password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView_changepassword_oldpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_changepassword_title"
        android:layout_marginTop="42dp"
        android:text="@string/old_password"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
