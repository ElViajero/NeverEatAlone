<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     >

    <ImageView
        android:id="@+id/imageView_meal_notification_vatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user_profile" 
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:gravity="left" >

        <TextView
            android:id="@+id/textView_meal_notification_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poster Name"
            android:textSize="19sp"
            android:textColor="#222222"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewmeal_notification_attendents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendents"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="#666666"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView_meal_notification_timeandlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time and Location"
            android:layout_marginTop="5dp"
            android:textColor="#999999"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>
