<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/myPostsDetail_contacts_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/user_avatar"
        android:src="@drawable/user_profile" />

    <TextView
        android:id="@+id/myPostsDetail_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/myPostsDetail_contacts_avatar"
        android:layout_toRightOf="@+id/myPostsDetail_contacts_avatar"
        android:text="@+id/contacts_name"
        android:textSize="30px" />

    <CheckBox
        android:id="@+id/myPostsDetail_contacts_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_centerVertical="true" />

</RelativeLayout>