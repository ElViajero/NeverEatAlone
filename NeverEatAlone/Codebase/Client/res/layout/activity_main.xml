<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo_big"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/ic_logo_big" />

    <RelativeLayout
        android:id="@+id/main_layout_blank1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/edit_username_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/edit_username_latent_layout_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" >
        </RelativeLayout>

        <EditText
            android:id="@+id/edit_username"
            style="@style/BigEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:hint="@string/username"
            android:inputType="text" />

        <RelativeLayout
            android:id="@+id/edit_username_latent_layout_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" >
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_layout_blank3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/edit_password_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/edit_password_latent_layout_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" >
        </RelativeLayout>

        <EditText
            android:id="@+id/edit_password"
            style="@style/BigEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <RelativeLayout
            android:id="@+id/edit_password_latent_layout_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" >
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_layout_blank2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_button1_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/main_button1_layout_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >
        </RelativeLayout>

        <Button
            android:id="@+id/button_login"
            style="@style/StandardButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:onClick="onLoginButtonClick"
            android:text="@string/login" />

        <RelativeLayout
            android:id="@+id/main_button1_layout_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_layout_blank5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_button2_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/main_button2_layout_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >
        </RelativeLayout>

        <Button
            android:id="@+id/button_signup"
            style="@style/StandardButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:onClick="onSignUpButtonClick"
            android:text="@string/signup" />

        <RelativeLayout
            android:id="@+id/main_button2_layout_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_layout_blank4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" >
    </RelativeLayout>

</LinearLayout>